{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/index.ts",
    "src/core/**/*",
    "src/types.ts",
    "src/utils/**/*",
    "src/formatters/**/*"
  ],
  "exclude": ["src/cli.ts", "src/cli/**/*", "**/*.test.ts", "**/*.spec.ts", "test/**/*"]
}
